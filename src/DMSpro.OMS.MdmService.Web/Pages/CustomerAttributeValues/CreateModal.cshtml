@page
@using Microsoft.AspNetCore.Mvc.Localization
@using DMSpro.OMS.MdmService.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using DMSpro.OMS.MdmService.Web.Pages.CustomerAttributeValues
@using DMSpro.OMS.MdmService.CustomerAttributeValues;
@using System.Globalization
@inject IHtmlLocalizer<MdmServiceResource> L
@model CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/CustomerAttributeValues/CreateModal" autocomplete="off">
    <abp-modal id="CustomerAttributeValueCreateModal">
        <abp-modal-header title="@L["NewCustomerAttributeValue"].Value"></abp-modal-header>

        <abp-modal-body>
                    
            <abp-input asp-for="CustomerAttributeValue.Code" />

            <abp-input asp-for="CustomerAttributeValue.AttrValName" />

                                <abp-select asp-for="CustomerAttributeValue.CustomerAttributeId" asp-items="Model.CustomerAttributeLookupListRequired" label="@L["CustomerAttribute"].Value"/>            <abp-select asp-for="CustomerAttributeValue.ParentId" asp-items="Model.CustomerAttributeValueLookupList" label="@L["Parent"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>